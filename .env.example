# Copy this file to .env (not used automatically by Spring Boot) and
# export variables into your shell before starting the app.

# JWT
APP_JWT_SECRET=change-me-strong-secret

# Google Gemini
GEMINI_API_KEY=your-gemini-key
# Optional service account path (JSON)
# GEMINI_SERVICE_ACCOUNT_PATH=C:\path\to\service-account.json

# Mail
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password

# Database
DB_PASSWORD=your-db-password
# Optionally override full URL
# DB_URL=jdbc:mysql://localhost:3307/lms_db?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true

# Rate limiting (optional)
# chat.rate.window-millis=60000
# chat.rate.max-requests=10
# chat.rate.backend=auto   # auto | redis | memory
